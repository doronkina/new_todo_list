.container
    margin 1u 0 3u
    flex-wrap wrap
    justify-content center
    +tablet()
        margin 2u 0 4u
    +desktop()
        margin 2u 0 5u
    +wide()
        margin 4u 0 8u
        flex-wrap no-wrap
        justify-content start
        overflow scroll

.addColumn
    width 100%
    height fit-content
    margin-top 2u
    align-items center
    +desktop()
        margin-top 3u
    +wide()
        width fit-content
        margin-top 3u
        margin-left 2u